<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             x:Class="OneDbgClient.Views.ProcessesView" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="600" DataContext="{Binding Processes, Mode=OneWay, Source={StaticResource Locator}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="{Binding Header}" Grid.Row="0" HorizontalAlignment="Left"/>
        <Button Content="Refresh Processes" Command="{Binding RefreshProcessesCommand}" Grid.Row="0" HorizontalAlignment="Right"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Label Content="Selected Process"  />
            <TextBox Text="{Binding SelectedProcess}" Width="100" Background="Aqua"/>
            <Button Content="Debug Process" Command="{Binding DebugProcessCommand}" HorizontalAlignment="Right"/>
        </StackPanel>
        <DataGrid ItemsSource="{Binding AllProcesses}" Grid.Row="2"/>

    </Grid>
</UserControl>
